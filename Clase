package JoaquinBerenguela_DiegoGuerra_Taller2POO;

import java.util.ArrayList;

public class Clase {
	
	private ArrayList<Pc> listaTipoClase;
	private String tipoClase;
	public Clase(String tipoClase) {
		this.tipoClase = tipoClase;
		listaTipoClase = new ArrayList<>();
	}
	public ArrayList<Pc> getListaTipoClase() {
		return listaTipoClase;
	}
	public void setListaTipoClase(ArrayList<Pc> listaTipoClase) {
		this.listaTipoClase = listaTipoClase;
	}
	public String getTipoClase() {
		return tipoClase;
	}
	public void setTipoClase(String tipoClase) {
		this.tipoClase = tipoClase;
	}
	
	public void agregarListaTipoClase(Pc p) {
		listaTipoClase.add(p);
	}
	
	public void imprimirPcsegunIp() {
		System.out.println("Clase : "+tipoClase);
		System.out.println(" PC     |    IP        |     SISTEMA OPERATIVO     |");
		for(Pc p: listaTipoClase) {
			System.out.println(p.getIdPC()+"     "+p.getIpPC()+"         "+ p.getSistemaOperativoPc());
			 
		}
		System.out.println("-----------------------------");
	}
}
