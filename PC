package JoaquinBerenguela_DiegoGuerra_Taller2POO;

import java.util.ArrayList;

public class Pc {
	private String idPC;
	private String ipPC;
	private String sistemaOperativoPc;
	
	private ArrayList<Puerto> listaPuertosDelPc;
	private ArrayList<Puerto> listaNumeroPuerto;
	
	public Pc(String idPC, String ipPC, String sistemaOperativoPc) {
		this.idPC = idPC;
		this.ipPC = ipPC;
		this.sistemaOperativoPc = sistemaOperativoPc;
		this.listaPuertosDelPc = new ArrayList<>();
		this.listaNumeroPuerto = new ArrayList<>();
	}

	public void agregarPuertos( Puerto p){
		this.listaPuertosDelPc.add(p);

	}
	public void agregarNumeroPuerto(Puerto p) {
		this.listaNumeroPuerto.add(p);
	}
	
	public String getIdPC() {
		return idPC;
	}

	public String getIpPC() {
		return ipPC;
	}

	public ArrayList<Puerto> getListaPuertosDelPc() {
		return listaPuertosDelPc;
	}

	public ArrayList<Puerto> getListaNumeroPuerto() {
		return listaNumeroPuerto;
	}

	public String getSistemaOperativoPc() {
		return sistemaOperativoPc;
	}
	
	
	public void getPuertosEnNumero() {
		
		for (Puerto puerto : listaPuertosDelPc) {
			System.out.print("Puertos: " + puerto.getNumeroPuerto() + " | ");		
			}System.out.println();
	}
	
	public void setListaPuertosManualmente(ArrayList<Puerto> listaConPuertos) {
		listaPuertosDelPc = listaConPuertos;
	}
	
	@Override
	public String toString() {
		return "ID PC = " + idPC + "\n" 
				+ "IP DEL PC=" + ipPC + "\n" +
				"TIPO DE SISTEMA OPERATIVO = " + sistemaOperativoPc + "]"+"\n    ";
	}
}
