package JoaquinBerenguela_DiegoGuerra_Taller2POO;

import java.util.ArrayList;

public class Puerto {
	
	private String idPC;
	private int numeroPuerto;
	private String estadoPuerto;
	
	private ArrayList<Vulnerabilidad> listaVulnerabilidad;
	
	public Puerto(String idPC, int numeroPuerto, String estadoPuerto) {
		this.idPC = idPC;
		this.numeroPuerto = numeroPuerto;
		this.estadoPuerto = estadoPuerto;
		listaVulnerabilidad = new ArrayList<>();
	}
	
	public String getIdPC() {
		return idPC;
	}
	public int getNumeroPuerto() {
		return numeroPuerto;
	}
	public String getEstadoPuerto() {
		return estadoPuerto;
	}
	
	public ArrayList<Vulnerabilidad> getlistaVulnerabilidad(){
		return listaVulnerabilidad;
	}
	
	public void agregarVulnerabilidad(Vulnerabilidad v) {
		listaVulnerabilidad.add(v);
	}
	@Override
	public String toString() {
		return "Puerto [idPC=" + idPC + ", numeroPuerto=" + numeroPuerto + ", estadoPuerto=" + estadoPuerto + "]";
	}
}
